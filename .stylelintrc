{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-css-modules"
  ],
  "plugins": [
    "stylelint-prettier"
  ],
  "rules": {
    "prettier/prettier": true,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["value", "include", "mixin" ]
      }
    ],
    "no-descending-specificity": null
  }
}